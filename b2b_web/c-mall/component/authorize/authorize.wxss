/* component/authorize/authorize.wxss */
.authorize-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.authorize-bg{
  width: 100%;
  height: 100%;
}

.authorize-content {
  position:absolute;
  top: 230rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.authorize-logo {
  width: 478rpx;
  height: 362rpx;
}

.btn-auth {
  margin-top: 104rpx;
  width: 662rpx;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 44px;
  text-align: center;
  font-size: 32rpx;
  color: #EB2B22;
  line-height: 88rpx;
}

.btn-unauth {
  margin-top: 42rpx;
  width: 662rpx;
  height: 88rpx;
  border-radius: 44rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.44);
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 86rpx;
}