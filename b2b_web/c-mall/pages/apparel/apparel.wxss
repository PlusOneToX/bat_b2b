/* pages/apparel/apparel.wxss */

.banner-wrap{
  position: relative;
}

.banner-wrap .banner {
  height: 400rpx;
  background-color: pink;
}

.banner-wrap .banner-image{
  width: 100%;
}

.banner-wrap .dots{
  position: absolute;
  left: 60rpx;
  right: 60rpx;
  bottom: 52rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.banner-wrap .dots .dot{
  margin-left: 8rpx;
  width: 12rpx;
  height: 4rpx;
  background: rgb(255,255,255,0.37);
  border-radius: 8rpx;
}

.banner-wrap .dots .active{
  width: 24rpx;
  background: #ffffff;
}

.apparel-content{
  position: relative;
  margin: 24rpx;
  padding-bottom: 40rpx;
}

.seckill-wrap{
  margin-top: 24rpx;
  padding: 24rpx 24rpx 28rpx;
}

.seckill-header{
  height: 48rpx;
  display: flex;
  justify-content:center;
  align-items: center;
}

.seckill-header .image{
  flex: 1;
  height: 100%;
}

.seckill-header .countdown-wrap{
  flex: 1;
  padding-left: 8rpx;
  display: flex; 
  justify-content: flex-start;
  align-items: center;
}

.seckill-header .countdown-wrap .time{
  color: var(--norm-white-color);
  font-size: var(--norm-middle-font-size);
  font-weight: var(--norm-medium-font-weight);
  background-color: var(--norm-red-color);
  width: 34rpx;
  height: 32rpx;
  text-align: center;
  border-radius: 4rpx;
}

.seckill-header .countdown-wrap .colon{
  font-size: var(--norm-middle-font-size);
  font-weight: var(--norm-medium-font-weight);
  width: 12rpx;
  height: 32rpx;
  text-align: center;
  color: var(--norm-gray-color);
}

.seckill-header .header-more-text{
  flex: 2;
}

.seckill-list{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.seckill-item{
  width: 204rpx;
}

.seckill-item .image{
  margin-top: 24rpx;
  width: 100%;
  background: linear-gradient(90deg, #F8F8F8 0%, #DEDDDB 100%),
              linear-gradient(90deg, #F6F6F6 0%, #EAF1F1 100%);
  border-radius: 8px;  
}

.seckill-item .price-wrap{
  margin-top: 12rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.newest-list-wrap{
  margin-top: 24rpx;
  display: flex;
}

.newest-item{
  width: 50%;
} 

.newest-item:nth-child(1){
  border-right: var(--norm-backgroud-gray-color) solid 1rpx;
}

.newest-item:nth-child(2){
  border-left: var(--norm-backgroud-gray-color) solid 1rpx;
}

.newest-header{
  height: 74rpx;
  background: linear-gradient(180deg, rgba(255, 116, 116, 0.16) 0%, rgba(216, 216, 216, 0) 100%);
  border-radius: 8rpx 8rpx 0 0;
  padding: 24rpx 24rpx 0;
  display: flex;
  justify-content:center;
  align-items: center;
}

.newest-header .image{
  flex: 1;
  height: 100%;
}

.newest-header .header-more-text{
  flex: 1;
}

.newest-box-a{
  padding: 24rpx 24rpx 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.newest-box-a .image{
  width: 152rpx;
  height: 152rpx;
}

.newest-box-b{
  padding: 24rpx 24rpx 28rpx;
}

.newest-box-b .image{
  width: 100%;
  height: 152rpx;
} 

.tabs-wrap .goods-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
}

.tabs-wrap .goods-item{
  width: 340rpx;
  margin-bottom: 20rpx;
  padding-bottom: 30rpx;
}

.tabs-wrap .goods-item .goods-image{
  width: 100%;
}

.tabs-wrap .goods-item .goods-info{
  padding: 0 32rpx;
}

.tabs-wrap .goods-item .tag-list {
  display: flex;
  margin-top: 8rpx;
}

.tag-list .tag-item{
  margin-right: 10rpx;
  padding: 0 8rpx;
  border: #F94021 solid 1px;
  border-radius: 4rpx;
}

.tag-item .tag{
  color: #F94021;
  font-size: 16rpx;
}


.tabs-wrap .goods-item .price-wrap{
  margin-top: 18rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}