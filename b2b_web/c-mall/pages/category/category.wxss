/* pages/category/category.wxss */

.category-container{
  height: 100vh;
  display: flex;
}

.left-menu{
  width: 180rpx;
}

.left-menu .menu-item{
  position: relative;
  height: 104rpx;
}

.menu-item .title {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333333;
  line-height: 100rpx;
  text-align: center;
}

.menu-item .title.active{
  background-color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  color: #EB2B22;
}

.left-menu .menu-item image {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 22rpx;
  height: 22rpx;
}

.right-content{
  flex: 1;
  background-color: #ffffff;
}

.right-content .goods-title{
  margin: 32rpx 30rpx 0;

}

.right-content .goods-list{
  margin: 32rpx 0rpx 30rpx 30rpx;
  display: flex;
  flex-wrap: wrap; 
}

.goods-list .goods-item{
  margin: 0 24rpx 30rpx 0;
  text-align: center;
  
}

.goods-list .img-bg{
  width: 154rpx;
  height: 152rpx;
  border-radius: 16rpx;
  background-color: #FAFAFA;
}

.goods-list .goods-icon{
  width: 100%;
  height: 100%;
}

.goods-list .goods-name{
  font-size: 24rpx;
  color: #333640;
  margin-top: 10rpx;
}




