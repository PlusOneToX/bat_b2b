/* pages/coupon/coupon.wxss */
.tabs-title{
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
}

.title-item{
  height: 100%;
}

.title-item .title {
  padding: 18rpx 0;
  color: #333333;
  font-size: 28rpx;
}

.title-item .line {
  margin: 0 12rpx;
  height: 4rpx;
  border-radius: 4rpx;
  background: #F94021;
}

.active{
  font-weight: 500;
  color: #F94021;
}

.tabs-content{
  padding-bottom: 120rpx;
}

.coupon-list {
  margin: 0 24rpx;
}

.coupon-item {
  position: relative;
  margin-top: 24rpx;
  height: 236rpx;
  display: flex;
}

.coupon-item .left-content {
  width: 236rpx;
  height: 236rpx;
  background-color: #FFEFED;
  border-radius: 16rpx  0rpx  0rpx  16rpx;
}

.coupon-item .left-content.disable {
  background-color: #CCCCCC;
}

.coupon-item .left-content.active {
  background-color: #F03A1D;
}

.left-content .face-vaule{
  margin-top: 54rpx;
  text-align: center;
  font-size: 28rpx;
  color: #EA210A
}

.left-content .face-vaule.disable{
  color: #ffffff;
}

.left-content .face-vaule.active{
  color: #ffffff;
}

.left-content .vaule{
  font-size: 60rpx;
  font-weight: 500;
}

.left-content .threshold{
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #656769;
  text-align: center;
}

.left-content .threshold.disable{
  color: #FFFFFF;
}

.left-content .threshold.active{
  color: #FFFFFF;
}

.coupon-item .right-content {
  flex: 1;
  margin: 20rpx 24rpx 20rpx 20rpx;
}

.right-content .cate-item {
  padding-left: 6rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.right-content .range-item {
  margin-top: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.range-item .range {
  border-radius: 2rpx;
  border: 2rpx solid #BCBCBC;
  font-size: 24rpx;
  color: #737373;
  padding: 0 12rpx;
}

.range-item .now-get {
  border-radius: 30rpx;
  border: 1rpx solid #F79B9E;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #EB2B22;
}

.stauts-wrap {
  position: absolute;
  top: 0;
  right: 0;
  width: 120rpx;
  height: 120rpx;
}

.stauts-wrap .image {
  width: 100%;
  height: 100%;
}

.right-content .time-item {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #333333;
}

.right-content .coupon-type-item {
  margin-top: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.coupon-type-item .coupon-type{
  font-size: 24rpx;
  color: #737373;
}

.coupon-type-item image{
  width: 32rpx;
  height: 32rpx;
}

.detail-wrap {
  padding: 34rpx 32rpx 36rpx;
  background-color: #ffffff;
  border-radius: 0 0 30rpx 30rpx;
}

.detail-wrap .time{
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.detail-wrap .tip-item{
  margin-top: 6rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.detail-wrap .circle{
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #333333;
  margin-right: 12rpx;
}

.detail-wrap .tip{
  font-size: 24rpx;
  color: #333333;
}

.coupon-no-data {
  margin-top: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.coupon-no-data image{
  width: 398rpx;
  height: 398rpx;
}

.coupon-no-data .text{
  margin-top: 28rpx;
  font-size: 32rpx;
  color: #333333;
}