}

.basic-menu .item .content{
  font-size: 24rpx;
  color: #333640;
}

.basic-menu .item .title{
  position: relative;
  font-size: 24rpx;
  font-weight: 500;
  color: #333640;
}

.basic-menu .item .desc{
  position: absolute;
  left: 206rpx;
  font-size: 24rpx;
  color: #333640;
}

.basic-menu .menu-btm-button{
  margin-top: 54rpx;
}

.basic-menu .button-finish {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(92deg, #F0541D 0%, #EA2423 100%);
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  color: var(--norm-white-color);
  font-size: var(--norm-largest-font-size);
}