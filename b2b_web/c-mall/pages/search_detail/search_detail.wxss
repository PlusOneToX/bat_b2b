/* pages/search_detail/search_detail.wxss */
page{
  background-color: var(--norm-backgroud-white-color);
}

.search-wrap{
  background-color:#F3F4F8;
  margin: 24rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	padding: 18rpx 28rpx;
	border-radius: 40rpx;
}

.search-wrap image{
	width: 44rpx;
}

.search-wrap input {
	width: 100%;
	height: 100%;
	font-size: var(--norm-large-font-size);
	color: var(--norm-main-black-color);
	margin-left: 10rpx;
}

.search-content {
  margin: 24rpx;
}

.search-empty{
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.search-empty image{
  width: 502rpx;
}

.search-empty .text{
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #424242;
}

.search-history {
	margin: 50rpx 40rpx 0;
}

.search-keyword {
	margin: 160rpx 0 0;
}

.search-keyword .title-text{
  font-size: var(--norm-largest-font-size);
  font-weight: 500;
	color: var(--norm-main-black-color);
}

.keyword-content {
	display: flex;
	flex-wrap: wrap;
	justify-content: flex-start;
	align-items: center;
}

.content-item {
	height: 62rpx;
	width: auto;
	font-size: 28rpx;
	color: #424242;
	line-height: 62rpx;
	text-align: center;
	padding: 0 34rpx;
	margin: 30rpx 30rpx 0 0;
	border-radius: 30rpx;
	background-color: #F3F4F8; 
}