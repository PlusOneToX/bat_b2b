/**app.wxss**/
page {
  /* 颜色变量 */
  --white: #FFFFFF;
  --mainColor: #FFDA01;
  /* 颜色变量 */

  height: 100%;
  color: #333333;
  box-sizing: border-box;
}

button::after {
  border: none;
}

image {
  vertical-align: middle;
}

/* 按钮 */
.confirm-btn {
  color: #333333;
  text-align: center;
  background-color: var(--mainColor);
}

.default-btn {
  color: #999999;
  text-align: center;
  background-color: rgba(255, 218, 1, 0.3);
}

.border-btn {
  color: #333333;
  text-align: center;
  border: 1px solid var(--mainColor);
  background-color: var(--white);
}

/* van-tab 重置 */
.van-tabs__wrap {
  padding: 0 30rpx;
  height: 106rpx;
}

.van-sticky {
  height: 106rpx !important;
}

.van-tab {
  padding: 0 30rpx !important;
  font-size: 26rpx !important;
  color: #999999 !important;
}

.van-tab--active {
  font-size: 32rpx !important;
  color: #333333 !important;
}

.van-tabs__line {
  bottom: 5rpx !important;
  width: 40rpx !important;
  height: 20rpx !important;
  background: url('data:image/png;base64,') no-repeat;
  background-color: transparent !important;
  background-size: 100% 100% !important;
}

/* 通知栏 */
.van-notice-bar .van-notice-bar__left-icon {
  position: relative;
  left: -10rpx;
  margin-right: 4rpx;
}

/* checkbox */
.van-checkbox__icon {
  font-size: 30rpx !important;
}

.van-icon::before {
  position: relative;
  top: 1rpx;
}

.van-checkbox__icon--checked {
  background-color: var(--white) !important;
  color: #333333 !important;
  border-color: #333333 !important;
}


/* 固定底部操作按钮 */
.fixed-btn-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  text-align: right;
  background-color: var(--white);
  box-shadow: 0 -2rpx 14rpx -4rpx rgba(189, 189, 189, 0.5);
  z-index: 99;
}

.fixed-btn-wrap .btn {
  display: inline-block;
  width: 330rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  text-align: center;
  background: var(--mainColor);
  border-radius: 90rpx;
}


/* 蒙版 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 100;
}

/* 活动按钮（转赠） */
.share-btn-wrap {
  position: relative;
  text-align: center;
}

.share-btn-wrap .btn {
  width: 500rpx;
  height: 90rpx;
}

.share-btn-wrap .btn-text {
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 45rpx;
  letter-spacing: 6rpx;
  transform: translate(-50%, -50%);
}