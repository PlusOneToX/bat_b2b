/* pages/code/bindCode/bindCode.wxss */
.add-card {
  padding: 0 30rpx;
  color: #333333;
}

.card-bg-wrap {
  margin: 56rpx auto 0;
  text-align: center;
}

.card-bg {
  width: 490rpx;
  height: 420rpx;
}

.input-title {
  padding: 40rpx 32rpx 48rpx;
  font-size: 28rpx;
}

.input-wrap {
  position: relative;
  padding: 0 160rpx 0 50rpx;
  font-size: 24rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 100rpx;
  background-color: #F2F2F2;
}

.input-wrap .input {
  width: 100%;
  height: 100%;
}

.input-wrap .icon-small {
  position: absolute;
  top: 50%;
  right: 110rpx;
  line-height: 1;
  transform: translateY(-50%);
  z-index: 1;
}

.input-wrap .scan {
  position: absolute;
  top: 50%;
  right: 50rpx;
  transform: translateY(-50%);
  z-index: 1;
  width: 45rpx;
  height: 45rpx;
}

.btn-wrap {
  padding: 100rpx 30rpx 0;
  display: flex;
}

.btn-wrap .btn {
  display: inline-block;
  flex: 1;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 32rpx;
  font-weight: 400;
  text-align: center;
  border-radius: 110rpx;
}