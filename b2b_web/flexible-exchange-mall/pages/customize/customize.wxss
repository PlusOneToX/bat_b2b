/* pages/customize/customize.wxss */
.img-wrap {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
}

.img-wrap .text {
  position: absolute;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #005597;
  z-index: 2;
}

.img-wrap .text-img {
  position: absolute;
  top: 152rpx;
  left: 50%;
  width: 380rpx;
  height: 63rpx;
  transform: translateX(-50%);
  z-index: 2;
}

.img-wrap .bg-img {
  position: absolute;
  left: 50%;
  width: 100%;
  height: 100%;
  transform: translateX(-50%);
  z-index: 1;
}

.btn-wrap {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 68rpx;
  display: flex;
  justify-content: center;
}

.btn-wrap .btn {
  width: 360rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border-radius: 50rpx;
}