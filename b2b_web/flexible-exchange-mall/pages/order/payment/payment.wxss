/* pages/order/payment/payment.wxss */
.payment-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  color: #333333;
  background-color: #f6f6f6;
  border-top: 1px solid #E7E7E7;
}

.order-info {
  padding: 80rpx 30rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: var(--white);
}

.order-info .order-no {
  margin-bottom: 80rpx;
}

.order-info .order-price {
  margin-top: 24rpx;
  font-size: 36rpx;
  color: #FF622B;
  line-height: 84rpx;
}

.order-info .order-price .price {
  font-size: 60rpx;
}

.payment-type {
  margin-top: 20rpx;
  padding: 48rpx 30rpx;
  font-size: 28rpx;
  background-color: var(--white);
}

.payment-type .wx-payment {
  position: relative;
  margin-top: 29rpx;
  padding-left: 76rpx;
  height: 44rpx;
  font-size: 30rpx;
  line-height: 44rpx;
}

.payment-type .image {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.payment-type .weixin {
  left: 0;
  width: 44rpx;
  height: 44rpx;
}

.payment-type .checked {
  right: 0;
  width: 40rpx;
  height: 39rpx;
}

.btn-wrap {
  padding: 120rpx 60rpx 0;
  display: flex;
}

.btn-wrap .btn {
  display: inline-block;
  flex: 1;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 32rpx;
  font-weight: 400;
  text-align: center;
  border-radius: 110rpx;
  background-color: var(--white);
}

.btn-wrap .btn.confirm-btn {
  background-color: var(--mainColor);
}