page {
  height: 100%;
}

.container {
  background: #f9f9f9;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.tui-rolling-search {
  width: 100%;
  height: 60rpx;
  border-radius: 35rpx;
  padding: 0 40rpx 0 30rpx;
  box-sizing: border-box;
  background: #F0F0F0;
  display: flex;
  align-items: center;
  margin: 15rpx auto;

  /* justify-content: center; */
  flex-wrap: nowrap;
  color: #999;
}

.search {
  /* height: 88rpx; */
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-bottom: 14rpx solid #F5F5F5;
}

.search .tui-hot-item {
  padding-left: 12rpx;
}

.search .input {
  width: 100%;
  height: 56rpx;
  background: #ededed;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search .icon {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.catalog {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
}

.catalog .nav {
  width: 200rpx;
  height: 100%;
  background-color: #F5F5F5;
}

.catalog .nav .item {
  width: 200rpx;
  height: 100rpx;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  z-index: 10;
  /* border: 1px solid #EEEEEE; */
  /* border-left: 6rpx solid #fff; */
}

.catalog .nav .item text{
  display: inline-block;
  width: 100%;
  height: 100%;
  color: #333;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.catalog .nav .item:not(.active){
  border-bottom: 1px solid #EEEEEE;
}

.catalog .nav .item .nxtCir,
.catalog .nav .item .upCir{
  display: none;
}


.catalog .nav .item.active {
  color: #333333;
  border-radius: 20rpx 0 0 20rpx;
  background-color: #FFFFFF;
  font-weight: 500;
  position: relative;
}

.catalog .nav .item.active .nxtCir,
.catalog .nav .item.active .upCir{
  display: block;
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  right: 0;
  bottom: -20rpx;
  background-color: #F5F5F5;
  border-top-right-radius: 20rpx;
}

.catalog .nav .item.active .nxtCir{
  bottom:auto;
  top:-20rpx;
  border-top-right-radius:0;
  border-bottom-right-radius: 20rpx
}

.catalog .nav .item.active .nxtCir text,
.catalog .nav .item.active .upCir text{
  display: block;
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
  position: absolute;
  z-index: -1;
}



