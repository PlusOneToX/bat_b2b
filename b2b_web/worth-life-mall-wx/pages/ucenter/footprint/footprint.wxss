page {
  background: #f4f4f4;
  min-height: 100%;
}

.container {
  background: #f4f4f4;
  min-height: 100%;
}


.day-hd {
  height: 94rpx;
  width: 100%;
  line-height: 94rpx;
  background: #fff;
  padding-left: 30rpx;
  color: #333;
  font-size: 28rpx;
}

.day-list {
  width: 100%;
  height: auto;
  overflow: hidden;
  border-top: 1px solid #e1e1e1;
}

.item {
  margin: 10rpx 0;
}

.item .img {
  float: left;
  width: 176rpx;
  height: 176rpx;
}

.item .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
  padding-top: 20rpx;
}

.item .info .name {
  font-size: 28rpx;
  color: #333;
}

.item .info .subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888;
}

.item .info .price {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #e41f19;
}

/*自定义按钮*/

.i-swipeout-demo-button-group {
  height: 100%;
  width: 100%;
}

.i-swipeout-demo-button {
  width: 100px;
  float: left;
  display: flex;
  height: 100%;
  justify-content: center;
  background: #e41f19;
  color: #fff;
  align-items: center;
}
